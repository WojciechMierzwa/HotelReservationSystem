@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - HotelReservationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Public" asp-action="Index">Hotel Reservation System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var session = HttpContextAccessor.HttpContext.Session;
                            var userRole = session.GetString("UserRole");
                            var isGuest = session.GetInt32("GuestId") != null;
                            var isEmployee = session.GetInt32("EmployeeId") != null;
                        }

                        @if (userRole == "Admin")
                        {
                            <!-- Admin: pełne menu -->
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Reservation" asp-action="Index">Reservations</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Room" asp-action="Index">Rooms</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="ReservationRoom" asp-action="Index">Reservation Rooms</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Hotel" asp-action="Index">Hotels</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Type" asp-action="Index">Types</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Employee" asp-action="Index">Employees</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Guest" asp-action="Index">Guests</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Logout">Logout</a></li>
                        }
                        else if (userRole == "Employee")
                        {
                            <!-- Pracownik: uproszczone menu -->
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Reservation" asp-action="Index">Reservations</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Room" asp-action="Index">Rooms</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="ReservationRoom" asp-action="Index">Reservation Rooms</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Logout">Logout</a></li>
                        }
                        else if (isGuest)
                        {
                            <!-- Gość: profil -->
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Profile">Profile</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Logout">Logout</a></li>
                        }
                        else
                        {
                            <!-- Niezalogowany -->
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Login">Login</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="Register">Register</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Public" asp-action="LoginEmployee">Login as Employee</a></li>
                        }
                    </ul>


                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - HotelReservationSystem
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
