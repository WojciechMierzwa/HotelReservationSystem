@model HotelReservationSystem.Models.ReservationRoomModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Reservation-Room</h1>

<h3>Are you sure you want to delete this reservation-room relationship?</h3>
<div>
    <h4>ReservationRoomModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Reservation ID</dt>
        <dd class="col-sm-9">@Model.Reservation?.Id</dd>

        <dt class="col-sm-3">Reservation Dates</dt>
        <dd class="col-sm-9">
            @Model.Reservation?.StartDate.ToShortDateString()
            -
            @Model.Reservation?.EndDate.ToShortDateString()
        </dd>

        <dt class="col-sm-3">Room Number</dt>
        <dd class="col-sm-9">@Model.Room?.RoomNumber</dd>

        <dt class="col-sm-3">Room Status</dt>
        <dd class="col-sm-9">@Model.Room?.Status</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
