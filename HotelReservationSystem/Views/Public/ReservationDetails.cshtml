@model HotelReservationSystem.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">Reservation Details</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Reservation Information</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.ReservationID)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.ReservationID)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.GuestName)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.GuestName)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.GuestSurname)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.GuestSurname)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.RoomId)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.RoomId)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.RoomNumber)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.RoomNumber)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.Floor)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.Floor)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.Beds)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.Beds)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.TotalCost)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.TotalCost) PLN</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.StartDate)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.StartDate)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.EndDate)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.EndDate)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-9 col-md-10">
                    <span class="badge @(Model.Status)">@Html.DisplayFor(model => model.Status)</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
           
            <a asp-action="MyReservations" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function getStatusBadgeClass(status) {
            switch (status.toLowerCase()) {
                case "confirmed":
                    return "bg-success";
                case "pending":
                    return "bg-warning";
                case "cancelled":
                    return "bg-danger";
                default:
                    return "bg-secondary";
            }
        }
    </script>
}