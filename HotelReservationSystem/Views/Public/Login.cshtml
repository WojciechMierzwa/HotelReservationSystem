@{
    ViewData["Title"] = "Login";
}
<h2>Login</h2>

<form method="post">
    <label>Username</label>
    <input name="username" />
    <label>Password</label>
    <input type="password" name="password" />
    <button type="submit">Login</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}
