@model HotelReservationSystem.Models.GuestModel

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

@if (Model != null)
{
    <table>
        <tr>
            <th>Login:</th>
            <td>@Model.Login</td>
        </tr>
        <tr>
            <th>Full Name:</th>
            <td>@Model.FullName</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Model.Mail</td>
        </tr>
        <tr>
            <th>Phone:</th>
            <td>@Model.Phone</td>
        </tr>
    </table>

    <br />
    <a href="/Public/Logout">Logout</a>
}
else
{
    <p>User not found or not logged in.</p>
    <a href="/Public/Login">Login</a>
}
