@model HotelReservationSystem.Models.TypeModel

@{
    ViewData["Title"] = "Room Type Details";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">Room Type Details</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Room Type Information</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9 col-md-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.BaseCost)</dt>
                <dd class="col-sm-9 col-md-10">@((int)Model.BaseCost) PLN</dd>

                <dt class="col-sm-3 col-md-2 font-weight-bold">@Html.DisplayNameFor(model => model.HighSeasonCost)</dt>
                <dd class="col-sm-9 col-md-10">@((int)Model.HighSeasonCost) PLN</dd>
            </dl>
        </div>
        <div class="card-footer bg-light">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>